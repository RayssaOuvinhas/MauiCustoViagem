<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.MainPage"
             Title="Adicionar Viagem">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_Salvar" />
        <ToolbarItem Text="Adicional Pedágio" Clicked="ToolbarItem_Clicked_Add"/>
        <ToolbarItem Text="Ver Viagens" Clicked="ToolbarItem_Clicked_Ver" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Origem:"/>
            <Entry x:Name="txt_origem"/>

            <Label Text="Destino:"/>
            <Entry x:Name="txt_destino"/>

            <Label Text="Distancia:"/>
            <Entry x:Name="txt_distancia"/>

            <Label Text="Rendimento:"/>
            <Entry x:Name="txt_rendimento"/>

            <Label Text="Preço do Combustivel:"/>
            <Entry x:Name="txt_preco"/>

            <Label Text="Preço do pedágio:"/>
            <Entry x:Name="txt_pedagio"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
